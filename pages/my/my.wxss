/* pages/my/my.wxss */
.my {
  text-align: center;
}
.my-item{
  padding: 20px 0;
  border-bottom: 1px solid #ccc;
}
.my-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  vertical-align: middle;
}


.my-input{
  width: 50%;
  display: inline-block;
  vertical-align: text-bottom;
}
.my-item__create-export-button{
  margin-top: 40rpx;
}
.my-change{
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100%;
  background-color: white;
}
.change-input{
  text-align: left;
  margin:20px;
}
.change-label{
  font-size: 24px;
  font-weight: bold;
}
.change-buttom{
  display: flex;
  justify-content: space-between;
}